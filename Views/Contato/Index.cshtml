@model List<ContatoModel>

@{
	ViewData["Title"] = "Listagem de Contatos";
}

<h2 class="mb-4">Listagem de Contatos</h2>

<table class="mb-4 table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Nome</th>
			<th scope="col">Email</th>
			<th scope="col">Telefone</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if(Model != null && Model.Any())
		{
			foreach(ContatoModel contato in Model)
			{
				<tr>
					<th scope="row">@contato.Id</th>
					<td>@contato.Nome</td>
					<td>@contato.Email</td>
					<td>@contato.Telefone</td>
					<td>
						<div class="btn-group" role="group" aria-label="Basic example">
							<a asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar" class="btn btn-primary" role="button">Editar</a>
							<a asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Apagar" class="btn btn-danger" role="button">Apagar</a>
						</div>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

<a asp-controller="Contato" asp-action="Criar" class="btn btn-primary" role="button">Adicionar Novo Contato</a>