@model ContatoModel

@{
	ViewData["Title"] = "Editar Contato";
}

<h2 class="mb-4">Editar Contato</h2>

<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Nome"  type="text" class="form-control" placeholder="Nome do contato" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email"  type="email" class="form-control" placeholder="Email do contato" />
    </div>

    <div class="mb-4">
        <label class="form-label">Telefone</label>
        <input asp-for="Telefone"  type="text" class="form-control" placeholder="Telefone do contato" />
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a asp-controller="Contato" asp-action="Index" class="btn btn-secondary" role="button">Voltar</a>
</form>

